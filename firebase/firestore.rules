rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /task/{document} {
      allow create: if request.resource.data.user == /databases/$(database)/documents/user/$(request.auth.uid);
      allow read: if resource.data.user == /databases/$(database)/documents/user/$(request.auth.uid);
      allow write: if resource.data.user == /databases/$(database)/documents/user/$(request.auth.uid);
      allow delete: if resource.data.user == /databases/$(database)/documents/user/$(request.auth.uid);
    }

    match /user/{document} {
      allow create: if request.auth.uid == document;
      allow read: if request.auth.uid == document;
      allow write: if request.auth.uid == document;
      allow delete: if request.auth.uid == document;
    }

    match /user/{parent}/shop_items/{document} {
      allow create: if request.resource.data.users_shop_items == /databases/$(database)/documents/user/$(request.auth.uid);
      allow read: if request.auth != null;
      allow write: if resource.data.users_shop_items == /databases/$(database)/documents/user/$(request.auth.uid);
      allow delete: if resource.data.users_shop_items == /databases/$(database)/documents/user/$(request.auth.uid);
    }

    match /{path=**}/shop_items/{document} {
      allow read: if request.auth != null;
    }

  }
}
